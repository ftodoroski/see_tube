<% if flash[:message] %>
  <ul>
    <% flash[:message].each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Sign up</h1>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password%>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.submit %>
<% end %>

<div>
     <%= link_to 'Log in', user_login_path %>
</div>