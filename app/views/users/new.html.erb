  <% if flash[:message] %>
    <% flash[:message].each do |f| %>
      <%= f %> <br>
    <% end %>
  <% end %>

<h1>Sign up</h1>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password%>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.submit %>
<% end %>